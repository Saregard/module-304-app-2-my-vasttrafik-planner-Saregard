<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.MainActivity"
    android:background="@color/vasttrafik_blue">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mainActivityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/text_box"
            android:text="@string/simple_planner"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"/>

        <LinearLayout
            android:id="@+id/vehicleIconRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp">

            <ImageView
                android:id="@+id/mainActivityBusIcon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/icon_bus"
                app:tint="@color/white" />

            <ImageView
                android:src="@drawable/icon_tram"
                android:id="@+id/mainActivityTramIcon"
                android:layout_marginEnd="34dp"
                android:layout_marginStart="34dp"
                android:layout_width="60dp"
                android:layout_height="55dp"
                app:tint="@color/white"/>

            <ImageView
                android:id="@+id/mainActivityBoatIcon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/icon_boat"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="@color/white"/>

        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/mainActivityProgressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layoutAnimation="@anim/layout_animation2"
        android:id="@+id/mainActivityRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</LinearLayout>