<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    android:id="@+id/departureCardView">

    <FrameLayout
        android:id="@+id/leftFrame"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:background="@color/vasttrafik_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/recyclerViewDepartureTextViewDirection"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:textSize="20sp"
                android:layout_gravity="left"
                tools:text="Rasdasdasd"/>

            <TextView
                android:id="@+id/timeLeftTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:gravity="right"
                tools:text="10 min"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/recyclerViewImageViewVehicleType"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginEnd="5dp" />


            <androidx.cardview.widget.CardView
                android:id="@+id/recyclerViewCardViewLineBackground"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:minWidth="30dp">

                <TextView
                    android:id="@+id/recyclerViewTextViewLineNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/recyclerViewTextViewDepartureTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:drawableStart="@drawable/icon_departure_time"
                android:drawablePadding="5dp"
                android:textSize="15sp"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="15:50"/>

            <TextView
                android:id="@+id/recyclerViewTextViewTrack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:drawableStart="@drawable/icon_track"
                android:drawablePadding="5dp"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="Platform A"
                android:textAlignment="center"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>